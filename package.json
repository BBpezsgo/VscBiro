{
  "name": "vscbiro",
  "displayName": "Bíró 3",
  "icon": "assets/icon.png",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "publisher": "banszky",
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/BBpezsgo/VscBiro"
  },
  "bugs": {
    "url": "https://github.com/BBpezsgo/VscBiro/issues"
  },
  "homepage": "https://github.com/BBpezsgo/VscBiro",
  "preview": true,
  "author": {
    "name": "Bánszky",
    "url": "https://github.com/BBpezsgo"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscbiro.refresh",
        "title": "Frissítés",
        "icon": "$(refresh)"
      },
      {
        "command": "vscbiro.selectExercise",
        "title": "Feladat megnyitása"
      },
      {
        "command": "vscbiro.openSubmittedFile",
        "title": "Feltöltött fájl megtekintése"
      },
      {
        "command": "vscbiro.submit",
        "title": "Fájl feltöltése",
        "icon": "$(cloud-upload)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "biro-menu",
          "title": "Bíró 3",
          "icon": "assets/icon_student2.svg"
        }
      ]
    },
    "views": {
      "biro-menu": [
        {
          "id": "biro-courses",
          "icon": "assets/class.svg",
          "name": "Kurzusok",
          "contextualTitle": "Bíró Kurzusok"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscbiro.refresh",
          "when": "view == 'biro-courses'",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "vscbiro.submit",
          "when": "vscbiro.allowSubmission",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "marked": "^17.0.1"
  }
}
